local player = game.Players.LocalPlayer -- Obtenemos al jugador local
local character = player.Character or player.CharacterAdded:Wait() -- Aseguramos obtener el personaje
local position = character:WaitForChild("HumanoidRootPart").Position -- Posici√≥n central del personaje

-- Creamos el bloque
local block = Instance.new("Part") -- Nuevo objeto tipo Part
block.Size = Vector3.new(4, 4, 4) -- Dimensiones del bloque 4x4x4
block.Position = position + Vector3.new(0, 5, 0) -- Posicionamos el bloque ligeramente por encima del jugador
block.Anchored = true -- Anclamos el bloque para que no caiga
block.BrickColor = BrickColor.new("Bright yellow") -- Color del bloque
block.Parent = workspace -- Lo agregamos al mundo

